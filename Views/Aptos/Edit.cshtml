@model ResiApp.Models.Apto

@{
    ViewBag.Title = "Editar Apartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .apto-form-container {
        max-width: 570px;
        margin: 2.7rem auto 0 auto;
        background: #fff;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        padding: 2.5rem 2.2rem 2rem 2.2rem;
    }

    .apto-form-title {
        color: #1a202c;
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
        letter-spacing: -0.01em;
    }

    .apto-form-group {
        margin-bottom: 1.5rem;
    }

    .apto-form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: .5rem;
        display: block;
        font-size: 0.95rem;
        letter-spacing: .01em;
    }

    .apto-form-control {
        border-radius: 0.5rem !important;
        border: 1px solid #d1d5db !important;
        font-size: 0.95rem;
        padding: 0.75rem 1rem !important;
        background: #ffffff !important;
        color: #374151;
        width: 100%;
        transition: all 0.15s ease;
    }

        .apto-form-control:focus {
            border-color: #2563eb !important;
            background: #fff !important;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            outline: none;
        }

        .apto-form-control:hover {
            border-color: #9ca3af !important;
        }

    .apto-form-btns {
        display: flex;
        gap: 0.75rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #f3f4f6;
    }

    .btn-apto-guardar {
        background: #2563eb;
        color: #fff;
        font-weight: 600;
        padding: 0.7rem 1.75rem;
        border-radius: 0.5rem;
        border: none;
        font-size: 0.95rem;
        box-shadow: 0 1px 3px rgba(37, 99, 235, 0.2);
        transition: all 0.2s ease;
        cursor: pointer;
        flex: 1;
    }

        .btn-apto-guardar:hover {
            background: #1d4ed8;
            color: #fff;
            box-shadow: 0 2px 6px rgba(37, 99, 235, 0.3);
        }

        .btn-apto-guardar i {
            margin-right: 0.5rem;
        }

    .apto-back-link {
        color: #6b7280;
        font-weight: 500;
        text-decoration: none;
        padding: 0.7rem 1.75rem;
        border: 1px solid #d1d5db;
        border-radius: 0.5rem;
        background: #ffffff;
        transition: all 0.15s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        flex: 1;
    }

        .apto-back-link:hover {
            background: #f9fafb;
            border-color: #9ca3af;
            color: #374151;
            text-decoration: none;
        }

        .apto-back-link i {
            margin-right: 0.5rem;
        }

    .text-danger {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>
<div class="apto-form-container">
    <div class="apto-form-title">Editar Apartamento</div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.IdApto)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="apto-form-group">
            <label class="apto-form-label" for="NombreApto">Nombre o Distinción Apto</label>
            @Html.TextBoxFor(model => model.NombreApto, new { @class = "apto-form-control", placeholder = "Ej: Apto 203" })
            @Html.ValidationMessageFor(model => model.NombreApto, "", new { @class = "text-danger" })
        </div>
        <div class="apto-form-group">
            <label class="apto-form-label" for="IdTorre">Torre</label>
            @Html.DropDownListFor(model => model.IdTorre, (IEnumerable<SelectListItem>)ViewBag.IdTorre, "-- Selecciona una Torre --", new { @class = "apto-form-control" })
            @Html.ValidationMessageFor(model => model.IdTorre, "", new { @class = "text-danger" })
        </div>
        <div class="apto-form-btns">
            <a href="@Url.Action("Index")" class="apto-back-link">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
            <button type="submit" class="btn-apto-guardar">
                <i class="fas fa-save"></i> Guardar Cambios
            </button>
        </div>
    }
</div>
