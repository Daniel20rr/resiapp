@model IEnumerable<ResiApp.Models.Apto>

@{
    ViewBag.Title = "Apartamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: @Html.Raw(HttpUtility.JavaScriptStringEncode(TempData["SuccessMessage"].ToString(), true)),
            confirmButtonText: 'Aceptar',
            timer: 3000
        });
    </script>
}
<style>
    .apto-table-container {
        max-width: 1100px;
        margin: 2.5rem auto;
        background: #ffffff;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        padding: 2rem 2.5rem 2.5rem 2.5rem;
    }

    .apto-title {
        text-align: center;
        color: #1a202c;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        letter-spacing: -0.01em;
    }

    .apto-table-actions {
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .btn-nuevo-apto {
        background: #2563eb;
        color: #fff;
        font-weight: 600;
        border-radius: 0.5rem;
        padding: 0.65rem 1.5rem;
        border: none;
        font-size: 0.95rem;
        box-shadow: 0 1px 3px rgba(37, 99, 235, 0.2);
        margin-bottom: .8rem;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-nuevo-apto:hover {
            background: #1d4ed8;
            color: #fff;
            text-decoration: none;
            box-shadow: 0 2px 6px rgba(37, 99, 235, 0.3);
        }

    .apto-table {
        width: 100%;
        background: #fff;
        border-radius: 0.5rem;
        overflow: hidden;
        border: 1px solid #e5e7eb;
    }

        .apto-table th, .apto-table td {
            padding: 1rem 1.25rem;
            text-align: left;
            border-bottom: 1px solid #f3f4f6;
            font-size: 0.95rem;
        }

        .apto-table th {
            background: #f8fafc;
            color: #475569;
            font-weight: 600;
            border-bottom: 1px solid #e5e7eb;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .apto-table tbody tr {
            transition: background-color 0.15s ease;
        }

            .apto-table tbody tr:hover {
                background-color: #f9fafb;
            }

        .apto-table tr:last-child td {
            border-bottom: none;
        }

        .apto-table td {
            color: #374151;
        }

    .btn-action-apto {
        border: 1px solid #e5e7eb;
        background: #ffffff;
        color: #6b7280;
        font-weight: 500;
        padding: 0.45rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        margin-right: 0.5rem;
        transition: all 0.15s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-action-apto:hover {
            background: #f9fafb;
            border-color: #d1d5db;
            color: #374151;
            text-decoration: none;
        }

        .btn-action-apto i {
            margin-right: 0.35rem;
        }

        .btn-action-apto.btn-editar:hover {
            background: #eff6ff;
            border-color: #3b82f6;
            color: #2563eb;
        }

        .btn-action-apto.btn-eliminar:hover {
            background: #fef2f2;
            border-color: #ef4444;
            color: #dc2626;
        }

    td[style*="text-align:center"] {
        white-space: nowrap;
    }
</style>

<div class="apto-table-container">
    <div class="apto-title">Apartamentos</div>

    <div class="apto-table-actions">
        <a href="@Url.Action("Create", "Aptos")" class="btn-nuevo-apto">
            <i class="fas fa-plus"></i> Nuevo Apartamento
        </a>
    </div>

    <table class="apto-table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Torre.NombreTorre)</th>
            <th>@Html.DisplayNameFor(model => model.NombreApto)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th style="text-align:center; width: 200px;">Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Torre.NombreTorre)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreApto)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td style="text-align:center;">
                    <a href="@Url.Action("Edit", "Aptos", new { id = item.IdApto })" class="btn-action-apto btn-editar">
                        <i class="fas fa-edit"></i>Editar
                    </a>
                    <a href="@Url.Action("Delete", "Aptos", new { id = item.IdApto })" class="btn-action-apto btn-eliminar">
                        <i class="fas fa-trash-alt"></i>Eliminar
                    </a>
                </td>
            </tr>
        }
    </table>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}